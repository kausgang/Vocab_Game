      <button type="button" class="button" id="create_game_2" onclick = "show_form_game_2()" >Game 2</button>
      <button type="button" class="button" id="stats" onclick="location.href = '/report'" >Report</button>
    </div>
    
    <p></p>
    
    <div>
      <form id = "game_1_input" action="/game_1" hidden >
        <label for="select_list_label">Select List for Game 1:</label><br>
        <select name="list" id="list_game_1">
        </select><br><br>
        <label for="number_of_words_label">Select Number of Words:</label><br>
        <input name="word_count" id="word_count" ></input>
        <br><br>
        <input type="submit" value="Submit">
      </form> 
    </div>



    <div>
      <form id = "game_2_input" action="/game_2" hidden >
