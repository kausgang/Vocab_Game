    <script>



      function show_form_game_1() {

        var x = document.getElementById("game_1_input");

        // show the input form for game_1
        x.style.display = "block"

        // hide the input form for study
        var a = document.getElementById("study_input");
        a.style.display = "none"

        // hide the input form for game_2
        var a = document.getElementById("game_2_input");
        a.style.display = "none"

        // hide the input form for game_1
        var a = document.getElementById("edit_list_input");
        a.style.display = "none"

        // populate the list data
        var y = document.getElementById("list_game_1");
        var lists_from_js = "<%= lists %>"
        var lists = lists_from_js.split(',')

        lists.forEach(element => {
          var option = document.createElement("option");
          option.text = element;
          y.add(option)
        });
      }



