<html>
    <head>
        
        <link rel='stylesheet' href='/stylesheets/style.css' />

      <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
      <script type="text/javascript">



        var game_1_data = "<%= game_1_data %>".split(',')
        var game_2_data = "<%= game_2_data %>".split(',')
    

        console.log(game_2_data)

        // reconstruct the array

        var game_1 = []
        for(i=0;i<game_1_data.length;i++){
            if(i==0){
                var temp = [game_1_data[i],game_1_data[i+1]]
                game_1.push(temp)
                i++;
            }
            else{
                var temp = [game_1_data[i],parseInt(game_1_data[i+1])]
                game_1.push(temp)
                i++;
            }
            
        }

        var game_2 = []
        for(i=0;i<game_2_data.length;i++){
            if(i==0){
                var temp = [game_2_data[i],game_2_data[i+1]]
                game_2.push(temp)
                i++;
            }
            else{
                var temp = [game_2_data[i],parseInt(game_2_data[i+1])]
                game_2.push(temp)
                i++;
            }
           
        }

        // console.log(game_1)
        // console.log(game_2)

        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);
  

        function drawChart() {

        //   var data = google.visualization.arrayToDataTable([
        //     ['Year', 'Sales', 'Expenses'],
        //     ['2004',  1000,      400],
        //     ['2005',  1170,      460],
        //     ['2006',  660,       1120],
        //     ['2007',  1030,      540]
        //   ]);

        var data1 = google.visualization.arrayToDataTable(game_1);
        var data2 = google.visualization.arrayToDataTable(game_2);
  
          var options_1 = {
            title: 'Game 1 Performance',
            curveType: 'function',
            legend: { position: 'bottom' }
          };

          var options_2 = {
            title: 'Game 2 Performance',
            curveType: 'function',
            legend: { position: 'bottom' }
          };
  
          var chart1 = new google.visualization.LineChart(document.getElementById('curve_chart_1'));
          var chart2 = new google.visualization.LineChart(document.getElementById('curve_chart_2'));
  
          chart1.draw(data1, options_1);
          chart2.draw(data2, options_2);
        }

      </script>
    </head>

