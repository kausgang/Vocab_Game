<!DOCTYPE html>
<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body onload="show_list()">
    <script>
      var word_count = "<%= word_count %>";
      var words = "<%= words %>".split(",");
      var meaning = "<%= meaning %>".split(",");
      var example = "<%= example %>".split(",");

      // console.log(meaning)

      function show_list() {
        // replace duplicate words with blanks
        var no_dupe_word = [],
          no_dupe_serial = [];
        words.filter(function (element, position) {
          if (words.indexOf(element) == position) {
            no_dupe_word.push(element);
            no_dupe_serial.push(position + 1);
          } else {
            no_dupe_word.push("");
            no_dupe_serial.push("");
          }
        });

        for (i = 0; i < word_count; i++) {
          $("#word_table").append(
            "<tr>" +
              '<td id="word_study"> <h2>' +
              no_dupe_word[i] +
              "</h2" +
              '</td><td> :- </td> <td id="meaning_study" style="width: 80%"> <h4>' +
              meaning[i] +
              "</h4>" +
              "</td" +
              "</tr>"
          );
          $("#word_table").append(
            "<tr> <td></td> <td></td> " +
              '<td id="example_study"> <h4>' +
              "Example - " +
              example[i] +
              "</h4>" +
              "</td>" +
              "</tr>"
          );

          $("#word_table").append("<tr> <td> <br /> </td> </tr>");
        }
      }
    </script>

    <div class="page">
      <div class="header">
        <div id="home_button">
          <button
            id="home"
            type="button"
            class="btn btn-primary"
            onclick=" window.location.href = '/'"
          >
            HOME
          </button>
          <p></p>
        </div>
      </div>

      <div id="main_content">
        <table id="word_table" class="table table-borderless"></table>
      </div>

      <!-- <div class="footer">
        
      </div> -->
    </div>
  </body>
</html>
